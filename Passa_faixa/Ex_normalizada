import numpy as np
import matplotlib.pyplot as plt

# Parâmetros do circuito
R = 100
L = 10e-3
C = 1e-6

# Frequência angular (rad/s)
w = np.logspace(1, 6, 1000)  # de 10^1 a 10^6 rad/s

# Função de transferência em magnitude
H = (R/L * w) / np.sqrt((1/(L*C) - w**2)**2 + (R/L * w)**2)

# Normalização (máximo = 1)
H_norm = H / np.max(H)

plt.figure(figsize=(10,6))
plt.semilogx(w, H_norm)
plt.title("Resposta em Frequência Normalizada - Filtro RLC Passa-Faixa")
plt.xlabel("Frequência angular ω [rad/s]")
plt.ylabel("|H(jω)| normalizado")
plt.grid(which='both', linestyle='--')
plt.show()
