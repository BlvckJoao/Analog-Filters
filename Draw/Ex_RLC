import schemdraw
import schemdraw.elements as elm

with schemdraw.Drawing(file='filtro_rlc_serie.svg') as d:
    d.config(unit=3)
    vin = d.add(elm.SourceSin().label('Vin'))
    d.add(elm.Resistor().right().label('R'))
    d.add(elm.Inductor().down().label('L'))
    d.add(elm.Capacitor().left().label('C'))
    d.add(elm.Line().up().at(vin.start))
